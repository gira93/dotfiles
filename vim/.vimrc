set nocompatible

syntax on

set number

set ruler

set wrap
set textwidth=0
set wrapmargin=0
set linebreak
set formatoptions=tcqrn1
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround

nnoremap j gj
nnoremap k gk
nnoremap <down> gj
nnoremap <up> gk

set laststatus=2

set backspace=indent,eol,start
